<header class="main-header">
   <h1>Sign Up</h1>
</header>
<section class="form-section">
   <form class="user-form" method="POST" action="/auth/signup" enctype="multipart/form-data">
      <div class="inputs">
         <div class="field img">
            <label for="">Profile image</label>
            <input type="file" name="image-perfil">
         </div>
         <div class="field">
            <label>Name</label>
            <input type="text" name="name" placeholder="Name">
         </div>
         <div class="field">
            <label>Email</label>
            <input type="email" name="mail" placeholder="Email">
         </div>
         <div class="field last">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password">
         </div>

         <p class="create-account">Already have an account? <a href="/auth/login">Go to login</a></p>
         
         {{!-- //localizaci√≥n Preguntar si pongo la localizacion en hiddden--}}
         <div style="display: none">
            <div>
               <label for="latitude">Latitude</label>
               <input type="text" id="latitude" name="latitude">
            </div>

            <div>
               <label for="longitude">Longitude</label>
               <input type="text" id="longitude" name="longitude">
            </div>
         </div>


      </div>

      <button class="btn btn-primary"  type="submit">Sign up</button>

   </form>
   {{> flash}}

   <script src="/javascripts/location.js"></script>
</section>